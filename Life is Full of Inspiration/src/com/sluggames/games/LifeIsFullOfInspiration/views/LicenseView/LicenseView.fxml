<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<fx:root fitToHeight="true" fitToWidth="true" type="ScrollPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: lightblue;">
         <children>
            <Text text="Licenses">
               <font>
                  <Font name="David CLM Bold" size="48.0" />
               </font>
            </Text>
            <Accordion VBox.vgrow="ALWAYS">
              <panes>
                <TitledPane animated="false" text="Game License">
                     <content>
                        <ScrollPane fitToWidth="true">
                           <content>
                              <TextFlow>
                                 <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                 </padding>
                                 <children>
                                    <Text fx:id="gameLicenseText" />
                                 </children>
                              </TextFlow>
                           </content>
                        </ScrollPane>
                     </content>
                  </TitledPane>
                <TitledPane animated="false" text="Music License">
                     <content>
                        <ScrollPane fitToWidth="true">
                           <content>
                              <TextFlow>
                                 <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                 </padding>
                                 <children>
                                    <Text fx:id="musicLicenseText" />
                                 </children>
                              </TextFlow>
                           </content>
                        </ScrollPane>
                     </content>
                  </TitledPane>
              </panes>
            </Accordion>
            <Button fx:id="mainMenuButton" mnemonicParsing="false" text="Main Menu" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </content>
</fx:root>
