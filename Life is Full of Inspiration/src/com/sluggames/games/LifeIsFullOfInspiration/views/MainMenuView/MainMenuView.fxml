<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<fx:root fitToHeight="true" fitToWidth="true" type="ScrollPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: lightblue;">
         <children>
            <TextFlow textAlignment="CENTER">
               <children>
                  <Text fx:id="titleText">
                     <font>
                        <Font name="David CLM Bold" size="48.0" />
                     </font>
                  </Text>
               </children>
            </TextFlow>
            <Button fx:id="playButton" mnemonicParsing="false" text="Play" />
            <Button fx:id="settingsButton" mnemonicParsing="false" text="Settings" />
            <Button fx:id="creditsButton" mnemonicParsing="false" text="Credits" />
            <Button fx:id="licenseButton" mnemonicParsing="false" text="License" />
            <Button fx:id="quitButton" mnemonicParsing="false" text="Quit" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </content>
</fx:root>
